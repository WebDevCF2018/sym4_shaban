{% extends 'template.html.twig' %}
{% block title %}{{ parent() }} - {{ instruments.getIntitule }}{% endblock %}

{% block titre %}{{ parent() }} - {{ instruments.getIntitule }}{% endblock %}
{% block stitre %}Détail de notre article {% endblock %}

{% block menu %}
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" href="{{ path("accueil") }}">Accueil
                <span class="sr-only">(current)</span>
            </a>
        </li>
        {% for itemMenu in familles %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path("detail_famille",{"id":itemMenu.getIdfamilles}) }}">{{ itemMenu.getLintitule }}</a>
            </li>
        {% endfor %}
        <li class="nav-item"> <a class="nav-link" href="#">Admin</a></li>
    </ul>
{% endblock %}

{% block contenu %}
    <h2>{{ instruments.getIntitule }}</h2>
    <h3>
        {% for categ in instruments.getFamillesfamilles %}
            <a href="{{ path("detail_famille",{"id":categ.getIdfamilles}) }}">{{ categ.getLintitule }}</a> |
        {% endfor %}
    </h3>
    <p>{{ instruments.getLadesc|nl2br }}</p>
    <h4>Par {{ instruments.getRedacteurredacteur.getCname }} le {{ instruments.getParution|date("d/m/Y à H \\h i \\m") }}</h4><hr>
{% endblock %}