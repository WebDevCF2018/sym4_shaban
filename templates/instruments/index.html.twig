    {% endblock %}
    <header class="page-heading">
        <div class="container">
            <h1>La liste d'instruments</h1>
        </div>
    </header>
    <div class="container">


    <table class="table sb-card">
        <thead>
            <tr>
                <th>Idinstruments</th>
                <th>Intitule</th>
                <th>Ladesc</th>
                <th>Parution</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for instrument in instruments %}
            <tr>
                <td>{{ instrument.idinstruments }}</td>
                <td>{{ instrument.intitule }}</td>
                <td>{{ instrument.ladesc }}</td>
                <td>{{ instrument.parution ? instrument.parution|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('instruments_show', {'idinstruments': instrument.idinstruments}) }}">Voir</a>
                    <a href="{{ path('instruments_edit', {'idinstruments': instrument.idinstruments}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
